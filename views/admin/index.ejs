<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card-hover:hover {
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      transform: scale(1.05);
      transition: transform 0.3s, box-shadow 0.3s;
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="container-fluid">
    <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block min-vh-100 bg-dark sidebar collapse">
        <img src="images/royal-store-logo.png" class="w-50 p-3" alt="IMG-LOGO">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active fs-5" aria-current="page" href="/admin-home">
                <i class="bi bi-speedometer2"></i> Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5" href="/category">
                <i class="bi bi-box-seam"></i> Categories
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5" href="#">
                <i class="bi bi-tag"></i> Products
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5" href="#">
                <i class="bi bi-cart"></i> Orders
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5" href="#">
                <i class="bi bi-people"></i> Users
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5" href="#">
                <i class="bi bi-gift"></i> Coupons
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5" href="#">
                <i class="bi bi-megaphone"></i> Offers
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5" href="#">
                <i class="bi bi-graph-up"></i> Sales Report
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5" href="#">
                <i class="bi bi-box-arrow-right"></i> Logout
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-center flex-md-nowrap align-items-center  pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h1">Dashboard</h1>
        </div>
        <div class="row">
          <!-- Add your dashboard widgets here -->
          <div class="col-md-4">
            <div class="card text-center card-hover">
              <div class="card-body">
                <h5 class="card-title">Categories</h5>
                <p class="card-text">Manage product categories</p>
                <a href="/category" class="btn btn-success">Go to Categories</a>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-center card-hover">
              <div class="card-body">
                <h5 class="card-title">Products</h5>
                <p class="card-text">View and manage products</p>
                <a href="#" class="btn btn-success">Go to Products</a>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-center card-hover">
              <div class="card-body">
                <h5 class="card-title">Orders</h5>
                <p class="card-text">View recent orders</p>
                <a href="#" class="btn btn-success">Go to Orders</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mt-4">
            <div class="card text-center card-hover">
              <div class="card-body">
                <h5 class="card-title">Users</h5>
                <p class="card-text">View recent users</p>
                <a href="#" class="btn btn-success">Go to Users</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mt-4">
            <div class="card text-center card-hover">
              <div class="card-body">
                <h5 class="card-title">Coupons</h5>
                <p class="card-text">View recent coupons</p>
                <a href="#" class="btn btn-success">Go to Coupons</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mt-4">
            <div class="card text-center card-hover">
              <div class="card-body">
                <h5 class="card-title">Offers</h5>
                <p class="card-text">View recent offers</p>
                <a href="#" class="btn btn-success">Go to Offers</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mt-4">
            <div class="card text-center card-hover">
              <div class="card-body">
                <h5 class="card-title">Sales Report</h5>
                <p class="card-text">View recent Sales Report</p>
                <a href="#" class="btn btn-success">Go to Sales Report</a>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
