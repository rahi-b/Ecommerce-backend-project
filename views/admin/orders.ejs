<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Orders</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card-hover:hover {
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      transform: scale(1.05);
      transition: transform 0.3s, box-shadow 0.3s;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar (Reuse your existing sidebar) -->
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block position-fixed min-vh-100 bg-dark sidebar collapse">
        <img src="/images/royal-store-logo.png" class="w-50 p-3" alt="IMG-LOGO">
        <div class="pt-3">
          <ul class="nav flex-column">
            <!-- Add Sidebar Links Here -->
          </ul>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="background-color: antiquewhite;">
        <div class="d-flex justify-content-between flex-md-nowrap align-items-center  pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h1" style="color: #5bc255;">Orders</h1>
        </div>

        <!-- Orders Table -->
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Products</th>
                <th>Total Amount</th>
                <th>Order Status</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach((order, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= order._id %></td>
                  <td><%= order.user.name %> - <%= order.user.email %></td>
                  <td>
                    <% order.products.forEach(product => { %>
                      <div><%= product.name %> (Qty: <%= product.quantity %>)</div>
                    <% }) %>
                  </td>
                  <td>$<%= order.totalAmount %></td>
                  <td><%= order.status %></td>
                  <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                  <td>
                    <a href="/admin/orders/edit/<%= order._id %>" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/admin/orders/delete/<%= order._id %>" class="btn btn-danger btn-sm">Delete</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
